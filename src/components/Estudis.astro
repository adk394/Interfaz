---
import "../styles/global.css";

interface Props {
  education: {
    degree: string;
    institution: string;
    year: string;
    id: string;
  };
}

const { education } = Astro.props;
---

<div class="bg-white p-8 rounded-2xl shadow-2xl transform transition-all hover:scale-105 hover:shadow-2xl duration-300 max-w-xs mx-auto ml-50 w-200">
  <img src="data:image/png;base64," alt="image" class="w-full h-48 object-cover rounded-lg mb-6" />
  
  <h2 class="text-3xl font-extrabold text-gray-800 mb-2 text-center">{education.degree}</h2>
  <h3 class="text-xl text-gray-600 mb-3 text-center">{education.institution}</h3>
  <p class="text-sm text-gray-500 text-center mb-6">{education.year}</p>
  
  <a href={`/education/${education.id}`} class="block text-center text-pink-600 font-semibold text-lg mt-4 hover:text-pink-700 transition-colors">VER DETALLS</a>
</div>
