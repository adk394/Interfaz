---
import cvData from '../../data/cv.json';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';

import "../../styles/global.css";


const contact = cvData.contact;
const languages = cvData.languages;
const skills = cvData.skills;
---
<Nav />
<Layout>
  
  <section class="bg-white text-gray-900 p-4 sm:p-6 rounded-xl shadow-md w-full max-w-screen-md mx-auto mt-10" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
    <h1 class="text-2xl sm:text-3xl font-bold mb-6 border-b border-gray-300 pb-2">Contacte</h1>

    <ul class="space-y-2 text-base sm:text-lg">
      <li><strong class="text-gray-700">Email:</strong> <a href={`mailto:${contact.email}`} class="underline break-all">{contact.email}</a></li>
      <li><strong class="text-gray-700">Telefon:</strong> {contact.phone}</li>
      <li><strong class="text-gray-700">Ubicacio:</strong> {contact.location}</li>
      <li><strong class="text-gray-700">Web:</strong> <a href={contact.website} class="underline break-all" target="_blank">{contact.website}</a></li>
      <li><strong class="text-gray-700">LinkedIn:</strong> <a href={contact.linkedin} class="underline break-all" target="_blank">{contact.linkedin}</a></li>
      <li><strong class="text-gray-700">GitHub:</strong> <a href={contact.github} class="underline break-all" target="_blank">{contact.github}</a></li>
    </ul>

    <h2 class="text-xl sm:text-2xl font-semibold mt-10 mb-3 border-b border-gray-300 pb-1">Idiomes</h2>
    <ul class="space-y-1 text-base sm:text-lg">
      {languages.map(lang => (
        <li><strong class="text-gray-700">{lang.language}:</strong> {lang.level}</li>
      ))}
    </ul>

    <h2 class="text-xl sm:text-2xl font-semibold mt-10 mb-3 border-b border-gray-300 pb-1">Habilitats</h2>
    <ul class="flex flex-wrap gap-3 mt-2">
      {skills.map((skill, index) => {
        const colors = [
          'bg-rose-200',
          'bg-orange-200',
          'bg-yellow-200',
          'bg-lime-200',
          'bg-emerald-200',
          'bg-cyan-200',
          'bg-sky-200',
          'bg-indigo-200',
          'bg-purple-200',
          'bg-pink-200',
          'bg-gray-200'
        ];
        const colorClass = colors[index % colors.length];
        return (
          <li class={`text-black ${colorClass} px-4 py-2 rounded-full text-sm sm:text-base shadow-sm transition duration-200 hover:scale-105`}>
            {skill}
          </li>
        );
      })}
    </ul>
  </section>
</Layout>