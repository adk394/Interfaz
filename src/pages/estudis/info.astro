---
import educationData from '../../data/cv.json';
import Layout from '../../layouts/Layout.astro';
import Estudis from '../../components/Estudis.astro';
import Nav from '../../components/Nav.astro';

---
<Nav />
<Layout>
  <section class="mt-20 bg-gradient-to-r from-gray-200 to-indigo-300 py-10">
    <div class="max-w-6xl mx-auto px-6">
      <h1 class="text-4xl font-bold text-white mb-6 text-center">Educacio</h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {educationData.education.map(estudi => (
          <Estudis key={estudi.id} education={estudi} />
        ))}
      </div>
    </div>
  </section>
</Layout>